<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >
    
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >

		<TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text= "@string/gender"  />
		<RadioGroup
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
		    <RadioButton android:id="@+id/male"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/male"
		        android:onClick="onRadioButtonClicked"/>
		    <RadioButton android:id="@+id/female"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/female"
		        android:onClick="onRadioButtonClicked"/>
	    </RadioGroup>
	    
	    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text= "@string/age" 
		         />
	    <RadioGroup
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
		    <RadioButton android:id="@+id/ageeleven"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/eleven"
		        android:onClick="onRadioButtonClicked"/>
		    
		    <RadioButton android:id="@+id/agefifteen"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/fifteen"
		        android:onClick="onRadioButtonClicked"/>
			
			<RadioButton android:id="@+id/ageeighteen"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/eighteen"
		        android:onClick="onRadioButtonClicked"/>
			
			<RadioButton android:id="@+id/agetwentyfive"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/twentyfive"
		        android:onClick="onRadioButtonClicked"/>
			
			<RadioButton android:id="@+id/agethirtyfive"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/thirtyfive"
		        android:onClick="onRadioButtonClicked"/>
			
			<RadioButton android:id="@+id/agefortyfive"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/fortyfive"
		        android:onClick="onRadioButtonClicked"/>
			
			<RadioButton android:id="@+id/agefiftyfive"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/fiftyfive"
		        android:onClick="onRadioButtonClicked"/>
			
			<RadioButton android:id="@+id/agesixtyfive"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/sixtyfive"
		        android:onClick="onRadioButtonClicked"/>
		</RadioGroup>
		
	    
	    
	    
	    <RadioGroup
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
			<TextView
		 		android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			    android:text= "@string/active" 
			         />
			<RadioButton android:id="@+id/actone"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/one"
		        android:onClick="onRadioButtonClicked"/>
			
			<RadioButton android:id="@+id/acttwo"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/two"
		        android:onClick="onRadioButtonClicked"/>
			
			<RadioButton android:id="@+id/actthree"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/three"
		        android:onClick="onRadioButtonClicked"/>
			
			<RadioButton android:id="@+id/actfour"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/four"
		        android:onClick="onRadioButtonClicked"/>
			
			<RadioButton android:id="@+id/actfive"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/five"
		        android:onClick="onRadioButtonClicked"/>
		</RadioGroup>
		
	    
	    
	    <RadioGroup
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
			<TextView
		 		android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			    android:text= "@string/cultural" 
			         />
			<RadioButton android:id="@+id/culone"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/culone"
		        android:onClick="onRadioButtonClicked"/>
			
			<RadioButton android:id="@+id/cultwo"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/cultwo"
		        android:onClick="onRadioButtonClicked"/>
			
			<RadioButton android:id="@+id/culthree"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/culthree"
		        android:onClick="onRadioButtonClicked"/>
			
			<RadioButton android:id="@+id/culfour"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/culfour"
		        android:onClick="onRadioButtonClicked"/>
			
			<RadioButton android:id="@+id/culfive"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/culfive"
		        android:onClick="onRadioButtonClicked"/>
		</RadioGroup>
		

	</LinearLayout>
	
</ScrollView>